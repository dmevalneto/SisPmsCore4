@model Setor
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSp.cshtml";
}


<h2 class="text-center text-info">Setor</h2>
<hr />
<p>
    @*<a class="btn btn-default" asp-action="Create">Novo Registro</a>*@
    <button class="btn btn-primary" onclick="NovoRegistro()">Novo Registro</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idSetor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gestor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<Setor>)ViewBag.ListaSetor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idSetor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gestor)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idSetor }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.idSetor }, new { @class = "btn btn-secondary" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.idSetor }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function NovoRegistro() {
        window.location.href = "../Setor/Create";
    }
</script>