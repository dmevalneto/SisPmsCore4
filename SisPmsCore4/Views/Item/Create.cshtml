@model Item
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutManutencao.cshtml";
}
<h2 class="text-center text-info">Item</h2>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Observacao" class="control-label"></label>
        <textarea rows="5" asp-for="Observacao" class="form-control"></textarea>
        <span asp-validation-for="Observacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Salvar</button>

</form>